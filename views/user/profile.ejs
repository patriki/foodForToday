<!--<h1>Profile</h1>-->


<div class="signup">
  <div class="panel panel-default">
    <div class="panel-body">
			<div class="panel-title"><h2>Profile</h2></div>

				<h3>Hi, <%= user.username %></h3>
        <hr>

       <!--.replace(/%20/g," ").replace(/[^A-Za-z]/g,"") -->

        <div class="form-group form-user-info">
          <label for="ageInput">Your age is: <%= user.age %></label><br>
					<label for="weightInput">Your weight: <%= user.weight %></label><br>
					<label for="allergiesInput">Allergies:
            <% if ( user.allergies && user.allergies.length > 0) {
            %> <ul> <% user.allergies.forEach((el)=> { %>
                  <li> <%= el.replace(/[^A-Za-z-]/g,"") %> </li>
                    <% }) %>
              </ul>
            <% } else { %>
                <span> None </span>
            <% }%>
          </label><br>
					<label for="dietInput">Diet:
            <% if ( user.kindOfDiet && user.kindOfDiet.length > 0) {
            %> <ul> <% user.kindOfDiet.forEach((el)=> { %>
                  <li> <%= el.replace(/%20/g,' ').replace(/[^A-Za-z\s]/g,"") %> </li>
                    <% }) %>
              </ul>
            <% } else { %>
                <span> None </span>
            <% }%>  </label><br>
        </div>
        <a href="/update"><button type="submit" class="btn-form">Update information</button></a>
        <a href="/profile/favourites"><button type="submit" class="btn-form">Show favourite recipes</button></a>

    </div>
  </div>
</div>
