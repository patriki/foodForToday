<div class="signup">
  <div class="panel panel-default">

    <div class="panel-body">
        <div class="panel-title">
          <h2>Sign Up</h2>
        </div>
        <form action="/signup" method="POST">

        <div class="form-group">
          <!--<label for="usernameInput">Username</label>-->
          <input type="text" class="form-control textBoxStyle" id="username" placeholder="Username" name="username">
        </div>

        <div class="form-group">
          <!--<label for="passwordInput">Password</label>-->
          <input type="password" class="form-control textBoxStyle" id="password" placeholder="Password" name="password">
        </div>

        <div class="form-group">
          <!--<label for="ageInput">Age</label>-->
          <input type="number" class="form-control textBoxStyle" id="age" placeholder="age" name="age" min="12" max="150">
        </div>

        <div class="form-group">
          <!--<label for="weightInput">Weight</label>-->
          <input type="weight" class="form-control textBoxStyle" id="weight" placeholder="weight" name="weight">
        </div>

         <div class="diet form-group">
        </div>

        <div class="allergy form-group">
        </div>

        <!-- <% if (typeof(message) != "undefined") { %> -->
          <!-- <div class="alert alert-danger" role="alert"><%= message %></div> -->
        <!-- <% } %> -->
        <% if ( message != "" ) { %>
          <div class="alert alert-danger" role="alert"><%= message %></div>
        <% } %>

        <button type="submit" class="btn-form">Submit</button>

      </form>
    </div>
  </div>

</div>
