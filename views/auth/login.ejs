<div class="login">
  <div class="panel panel-default">
    <!--<div class="panel-heading">Login</div>-->
    <div class="panel-body">
      <div class="panel-title">
        <h2>Login</h2>
      </div>
      <form action="/login" method="POST">
        <div class="form-group">
          <!--<label for="usernameInput">Username</label>-->
          <input type="text" class="form-control textBoxStyle" id="username" placeholder="Username" name="username">
        </div>
        <div class="form-group">
          <!--<label for="passwordInput">Password</label>-->
          <input type="password" class="form-control textBoxStyle" id="password" placeholder="Password" name="password">
        </div>
        <% if ( message != "" ) { %>
          <div class="alert alert-danger" role="alert"><%= message %></div>
        <% } %>
        <button type="submit" class="btn-form">Login now</button>
        <a href="/auth/facebook" class="btn-form">Login With Facebook</a>
      </form>
    </div>
  </div>

</div>
